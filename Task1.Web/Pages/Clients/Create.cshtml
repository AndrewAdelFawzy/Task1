@page
@model Task1.Web.Pages.Clients.CreateModel
@{
    ViewData["Title"] = "Add Client";
}

<h2 class="mb-4">Add Client</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post">
            <div class="row mb-4">
              
                <div class="col-md-6">
                    <div class="form-floating mb-4">
                        <input type="text" class="form-control form-control-solid" placeholder="Client Name" asp-for="ClientModel.Name" />
                        <label asp-for="ClientModel.Name">Client Name</label>
                    </div>
                    <span asp-validation-for="ClientModel.Name" class="text-danger"></span>
                </div>

               
                <div class="col-md-6">
                    <div class="form-floating mb-4">
                        <input type="number" class="form-control form-control-solid" placeholder="Client Code" asp-for="ClientModel.Code" />
                        <label asp-for="ClientModel.Code">Client Code</label>
                    </div>
                    <span asp-validation-for="ClientModel.Code" class="text-danger"></span>
                </div>
            </div>

           
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <select class="form-select pb-2" asp-for="ClientModel.Class" asp-items="Model.ClientModel.ClientClasses">
                            <option value="" selected> -- Select Client State -- </option>
                        </select>
                        <label asp-for="ClientModel.Class">Client Class</label>
                    </div>
                    <span asp-validation-for="ClientModel.Class" class="text-danger"></span>
                </div>

               
                <div class="col-md-6">
                    <div class="form-floating pb-1">
                        <select class="form-select pb-1" asp-for="ClientModel.State" asp-items="Model.ClientModel.ClientStates">
                            <option value="" selected > -- Select Client State -- </option>
                        </select>
                        <label asp-for="ClientModel.State">Client State</label>
                    </div>
                    <span asp-validation-for="ClientModel.State" class="text-danger"></span>
                </div>
            </div>

           
            <div class="card-footer text-end bg-white">
                <button type="submit" class="btn btn-primary">
                    <span class="indicator-label">Save</span>
                    <span class="indicator-progress">
                        Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
                <a class="btn btn-light text-primary ms-3" asp-page="./Index">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
