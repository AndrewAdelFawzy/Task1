@page
@model Task1.Web.Pages.Clients.DeleteModel
@{
    ViewData["Title"] = "Delete Client";
}

<h2>Delete Client</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Client</h4>
    <div>
        <label>Code:</label> @Model.ClientModel.Code
    </div>
    <div>
        <label>Name:</label> @Model.ClientModel.Name
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="ClientModel.ClientId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
