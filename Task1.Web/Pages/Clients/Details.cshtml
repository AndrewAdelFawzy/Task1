@page
@model Task1.Web.Pages.Clients.DetailsModel
@{
    ViewData["Title"] = "Client details";
}
<h2>Client details</h2>

@section Styles {
    <link href="~/assets/plugins/datatables/datatables.bundle.css" rel="stylesheet" />
}

<div class="content flex-column-fluid" id="kt_content">
    <!--begin::Navbar-->
    <div class="card mb-9">
        <div class="card-body pt-9 pb-0">
            <!--begin::Details-->
            <div class="d-flex flex-wrap flex-sm-nowrap mb-6">
                <!--begin::Wrapper-->
                <div class="flex-grow-1">
                    <!--begin::Head-->
                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                        <!--begin::Details-->
                        <div class="d-flex flex-column">
                            <!--begin::Status-->
                            <!--end::Status-->
                            <!--begin::Description-->
                            <div class="d-flex flex-wrap fw-semibold mb-1 fs-5 text-gray-400">
                                <span class="ms-2 text-primary">@Model.ClientModel.Name</span>
                            </div>
                            <!--end::Description-->
                        </div>
                        <!--end::Details-->
                        <!--begin::Actions-->
                        <div class="d-flex mb-4">
                            <a asp-page="./Edit" asp-route-id="@Model.ClientModel.ClientId" class="btn btn-sm btn-primary me-3">Edit</a>
                        </div>
                        <!--end::Actions-->
                    </div>
                    <!--end::Head-->
                    <!--begin::Info-->
                    <div class="d-flex flex-wrap justify-content-start">
                        <!--begin::Stats-->
                        <div class="d-flex flex-wrap">
                            <!--begin::Stat-->
                            <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                <!--begin::Number-->
                                <div class="d-flex align-items-center">
                                    <div class="fs-7 fw-bold">@Model.ClientModel.Class</div>
                                </div>
                                <!--end::Number-->
                                <!--begin::Label-->
                                <div class="fw-semibold fs-6 text-gray-400">Client class</div>
                                <!--end::Label-->
                            </div>
                            <!--end::Stat-->
                            <!--begin::Stat-->
                            <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">

                                <div class="d-flex align-items-center">
                                    <div class="fs-7 fw-bold">@Model.ClientModel.Code</div>
                                </div>
                                <div class="fw-semibold fs-6 text-gray-400">Client Code</div>
                            </div>
                            <!--end::Stat-->
                            <!--begin::Stat-->
                            <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">

                                <div class="d-flex align-items-center">
                                    <div class="fs-7 fw-bold">@Model.ClientModel.State</div>
                                </div>
                                <div class="fw-semibold fs-6 text-gray-400">Client State</div>
                            </div>
                            <!--end::Stat-->
                        </div>
                        <!--end::Stats-->

                    </div>
                    <!--end::Info-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Details-->
            <div class="separator"></div>
            <!--begin::Nav-->
            <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bold">

                <!--begin::Nav item-->
                <li class="nav-item">
                    <a class="nav-link text-active-primary py-5 me-6" data-bs-toggle="tab" href="#Copies">Related Products</a>
                </li>
            </ul>
            <!--end::Nav-->
        </div>
    </div>
    <!--end::Navbar-->
    <div class="tab-content">
        <!--begin::Card-->
        <!--end::Card-->
        <!--begin::Card-->
        <div id="Copies" class="card tab-pane fade">
            <!--begin::Card header-->
            <div class="card-header">
                <!--begin::Card title-->
                <div class="card-title fs-3 fw-bold">Related products</div>
                <!--end::Card title-->

            </div>

            <!--end::Card header-->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-row-dashed table-row-gray-300 gy-7">
                        <thead>
                            <tr class="fw-bold fs-6 text-gray-400 text-uppercase">
                                <th>Name</th>
                                <th>Describtion</th>
                                <th>Status</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Lisence</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ClientModel.Products)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <span class="badge badge-light-@(item.IsActive ? "success" : "warning") me-auto">
                                            @(item.IsActive ? "Acitve" : "Not active")
                                        </span>
                                    </td>
                                    <td>@item.StartDate.ToString("dd MMM, yyyy")</td>
                                    <td>@item.EndDate?.ToString("dd MMM, yyyy")</td>
                                    <td>@item.Lisence</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                            <!--begin::Svg Icon | path: icons/duotune/general/gen024.svg-->
                                            <span class="svg-icon svg-icon-2">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                        <rect x="5" y="5" width="5" height="5" rx="1" fill="currentColor"></rect>
                                                        <rect x="14" y="5" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                        <rect x="5" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                        <rect x="14" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                    </g>
                                                </svg>
                                            </span>
                                            <!--end::Svg Icon-->
                                        </button>
                                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3" data-kt-menu="true" style="">
                                            <!--begin::Menu item-->
                                            <div class="menu-item px-3">
                                                <a asp-action="Edit" asp-controller="BookCopies" asp-route-copyId="" class="menu-link px-3 js-render-modal">
                                                    Edit
                                                </a>
                                            </div>
                                            <!--end::Menu item-->
                                            <!--begin::Menu item-->
                                            <div class="menu-item px-3">
                                                <a asp-page="/ClientProducts/Delete" asp-route-ClientId="@Model.ClientModel.ClientId" asp-route-ProductId="@item.ProductId" class="menu-link px-3 js-render-modal">
                                                    Delete
                                                </a>
                                            </div>
                                            <!--end::Menu item-->

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--end::Card-->
    </div>
</div>
@section Plugins {
    <script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('table').DataTable();
        });
    </script>
}