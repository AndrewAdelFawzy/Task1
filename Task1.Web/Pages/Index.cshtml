@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-column flex-root">
    <!--begin::Page bg image-->
    <style>
        body {
            background-image: url('/assets/images/bg10.jpeg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
        }

        [data-theme="dark"] body {
            background-image: url('/assets/images/bg10-dark.jpeg');
        }
    </style>
    <!--end::Page bg image-->
    
    <!--begin: Body-->
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <!--begin::Aside-->
        <div class="d-flex flex-column flex-lg-row-fluid">
            <!--begin::Content-->
            <div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-4 p-lg-10 w-100 text-center">
                <!--begin::Image-->
                <img class="theme-light-show mx-auto mw-100 w-100 w-md-150px w-lg-400px mb-4 mb-lg-10" src="~/assets/images/welcome.svg" alt="Welcome" />
                <img class="theme-dark-show mx-auto mw-100 w-100 w-md-150px w-lg-400px mb-4 mb-lg-10" src="~/assets/images/welcome.svg" alt="Welcome" />
                <!--end::Image-->
                
                <!--begin::Title-->
                <h1 class="text-gray-800 fs-1 fs-md-2qx fw-bold text-center mb-4 mb-lg-7">Welcome!</h1>
                <!--end::Title-->
                
                <!--begin::Text-->
                <div class="text-gray-600 fs-base fs-md-lg text-center fw-semibold mb-4">
                    This is an ASP .NET Core Razor Pages Task,
                    I hope that I do it well and I am open to any discussion.
                    <p class="mt-3"> Greetings, Andrew Adel </p>
                </div>
                <!--end::Text-->
            </div>
            <!--end::Content-->
        </div>
    </div>
</div>

<!--end::Page-->
